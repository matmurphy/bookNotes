<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Book Reviews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="./styles/main.css" rel="stylesheet">
  </head>

  <body>
    <div class="container-fluid d-flex flex-column">
        <h6 class="col-10 mt-3 mx-3">Filter by</h6>
        <div class="col-12 d-flex flex-column justify-content-center align-items-center">
            <h1><%=first_name + " " + last_name%>'s</h1>
            <h1>Favorite Books</h1>
        </div>
        <div class="col-12 d-flex flex-column justify-content-center align-items-center mt-3">
            <div class="col-10 book-tile d-flex flex-column align-items-center">
                <div class="col-12 align-self-end d-flex flex-row justify-content-between">
                    <img class="col-2 mt-3 align-self-end edit-icons" src="./assets/pencil-square.svg"/>
                    <img class="col-2 mt-3 align-self-end edit-icons" src="./assets/pen.svg"/>
                    <img class="col-2 mt-3 align-self-end edit-icons" src="./assets/trash3.svg"/>
                </div>
                <img class="col-8 mt-3 book-image" src="<%=isbn_api%>">
                <h6 class="mt-2"><%=book_title%></h6>
                <h6 class="col-12 mt-1 mb-1 d-flex flex-row justify-content-center">Rating: 
                    <% for(i=0; i<rating; i++) { %>
                        &#11088
                    <% }; %>
                </h6>
                <p class="col-10 mt-1 mb-2 description"><%=review_description%></p>
                <div class="col-12 d-flex flex-row mb-5 mt-3 justify-content-center">
                    <% if (currentReviewIndex != 0  || currentReviewIndex != "") { %>
                    <div class="col-2 backwards button mx-3 d-flex justify-content-center align-items-center">
                        <form class="last-review" action="/last" method="post">
                            <input type="hidden" name="currentReviewIndex" value="<%= currentReviewIndex %>">
                            <button class="btn btn-secondary" type="submit">
                                <img src="./assets/arrow-left.svg"/>
                            </button>
                        </form>
                    </div>
                    <% } %>
                    <% if (currentReviewIndex <  lastReviewIndex) { %>
                        <div class="col-2 forwards button mx-3 d-flex justify-content-center align-items-center">
                            <form class="last-review" action="/next" method="post">
                                <input type="hidden" name="currentReviewIndex" value="<%= currentReviewIndex %>">
                                <button class="btn btn-secondary" type="submit">
                                    <img src="./assets/arrow-right.svg"/>
                                </button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>