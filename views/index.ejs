<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Book Reviews</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="./styles/main.css" rel="stylesheet">
  </head>

  <body>
    <div class="col-12 d-flex flex-row justify-content-center align-items-center nav mt-3">
        <div class="col-12 d-flex flex-row justify-content-end nav-icons">
            <div class="col-2 col-md-1 d-flex flex-column justify-content-center align-items-center">
                <a href="./select-user">
                    <img class="mx-3 header-icons icon-switch-user" src="./assets/people.svg"/>
                </a>
                <p class="icon-subheader subheader-switch-user">Switch Users</p>
            </div>
            <div class="col-2 col-md-1 d-flex flex-column justify-content-center align-items-center">
                <img class="header-icons icon-new-review" src="./assets/pencil-square.svg"/>
                <p class="icon-subheader subheader-new-review">New Review</p>
            </div>
            <div class="col-1"></div>
        </div>
    </div>

    <div class="col-12 d-flex justify-content-center align-items-end book-owner">
        <h4><%=first_name%>'s Favorite Books</h4>
    </div>

    <div class="col-12 d-xl-flex flex-row justify-content-center align-items-center">

    <% if (locals.reviews) { %>
        <% for (i=0; i<reviews.length; i++) { %>
        
            <div class="col-12 col-xl-6 d-flex flex-column mt-4">
                <div class="col-11 d-flex flex-row align-self-center book-review">
                    <div class="col-5 col-lg-4 d-flex flex-column justify-content-center align-items-center">
                        <img class="col-10 book-image" src="https://covers.openlibrary.org/b/isbn/<%=reviews[i].isbn%>-L.jpg" />


                        
                    </div>
                    <div class="col-8 d-flex flex-column align-items-start justify-content-start">
                        <h5 class="mt-3 book-title"><%=reviews[i].title%></h5>
                        <h3 class="book-rating">Rating: 
                            <% for (x=0; x<reviews[i].rating; x++) { %>
                                &#11088
                            <% } %>
                        </h3>
                        <p class="col-10 mt-1 mb-2 book-description"><%=reviews[i].review_description%></p>
        
                        <div class="col-12 d-flex flex-row justify-content-end align-self-send mt-auto mb-3">
                            <img class="col-2 mx-3 edit-icons" src="./assets/pen.svg"/>
                            <img class="col-2 edit-icons" src="./assets/trash3.svg"/>
                            <div class="col-1"></div>
                        </div>
                    </div>
                </div>    
            </div>
        
        <% } %>
    
    <% } %>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>